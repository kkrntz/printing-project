<% layout('index') -%>

<div class="col container">
    <h3>Printer Settings</h3>
    <!-- <div class="col">
        <% if (!network && !wifi){ %>
        <span style="font-style:italic; color:red">No connection.</span>
        <% } %>
    </div> -->
    <br />
    <form class="col container" method = "post">
        <div class="row pb-2">
            <div class="col-2"><font class="h5_font" for = "user">File type </font></div>
            <div class="col-4">
                <select name = "file_type"  class="custom-select">
                    <option></option>
                    <option value="jpeg">jpg/jpeg</option>
                    <option value="png">png</option>
                </select>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-2"><font class="h5_font" for = "ssid">Password </font></div>
            <div class="col-4"><input type="password" name="password" class="form-control" <%= (!network && !wifi) ? 'disabled' : ''  %>></div>
        </div>
        <div class="row pb-4">
            <div class="col-2"><font class="h5_font" for = "ssid">Destination File </font></div>
            <div class="col-4"><input type="text" name="dest" class="form-control" <%= (!network && !wifi) ? 'disabled' : ''  %>></div>
        </div>
        <div class="row">
            <div class="col-2">&nbsp;</div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary float-right">Save</button>
            </div>
        </div>
    </form>
</div>